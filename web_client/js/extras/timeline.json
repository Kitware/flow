{
  "padding": {"top": 20, "left": 50, "bottom": 50, "right": 20},
  "data": [
    {
      "name": "table"
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {"data": "table", "field": "data.date"}
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {"data": "table", "field": "data.y"}
    },
    {
      "name": "color", "type": "ordinal", "range": "category10"
    }
  ],
  "axes": [
    {"type": "x", "scale": "x"},
    {"type": "y", "scale": "y", "format": "g"}
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "data": "table",
        "transform": [{"type": "facet", "keys": ["data.group"]}]
      },
      "marks": [
        {
          "type": "line",
          "properties": {
            "enter": {
              "x": {"scale": "x", "field": "data.date"},
              "y": {"scale": "y", "field": "data.y"},
              "stroke": {"scale": "color", "field": "data.group"},
              "strokeWidth": {"value": 1},
              "strokeOpacity": {"value": 1}
            }
          }
        },
        {
          "type": "symbol",
          "properties": {
            "enter": {
              "x": {"scale": "x", "field": "data.date"},
              "y": {"scale": "y", "field": "data.y"},
              "strokeWidth": {"value": 0}
            },
            "hover": {
              "size": {"value": 100},
              "fill": {"value": "red"},
              "fillOpacity": {"value": 1}
            },
            "update": {
              "size": {"value": 100},
              "fill": {"scale": "color", "field": "data.group"},
              "fillOpacity": {"value": 0}
            }
          }
        }
      ]
    }
  ]
}